<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>de.cubbossa.TinyTranslations</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>TinyTranslations</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="support@yourcompany.com" url="https://www.yourcompany.com">YourCompany</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.yaml</depends>
    <depends>com.intellij.properties</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <iconProvider implementation="org.intellij.sdk.language.tinytranslations.TinyTranslationsIconProvider"/>

        <fileType
                name="NanoMessage"
                implementationClass="org.intellij.sdk.language.nanomessage.NanoMessageFileType"
                fieldName="INSTANCE"
                language="NanoMessage"
                extensions="lang"
        />
        <lang.parserDefinition
                language="NanoMessage"
                implementationClass="org.intellij.sdk.language.nanomessage.NanoMessageParserDefinition"
        />
        <colorSettingsPage implementation="org.intellij.sdk.language.nanomessage.NanoMessageColorSettingsPage"/>
        <completion.contributor
                language="NanoMessage"
                implementationClass="org.intellij.sdk.language.nanomessage.NanoMessageCompletionContributor"
        />
        <lang.findUsagesProvider
                language="NanoMessage"
                implementationClass="org.intellij.sdk.language.nanomessage.NanoMessageFindUsagesProvider"
        />
        <annotator
                language="NanoMessage"
                implementationClass="org.intellij.sdk.language.nanomessage.NanoMessageAnnotator"
        />
        <languageInjectionContributor
                language="yaml"
                implementationClass="org.intellij.sdk.language.nanomessage.YmlLanguageInjector"
        />
        <languageInjectionContributor
                language="Properties"
                implementationClass="org.intellij.sdk.language.nanomessage.PropertiesLanguageInjector"
        />
        <colorProvider
                language="NanoMessage"
                implementationClass="org.intellij.sdk.language.nanomessage.NanoMessageElementColorProvider"
        />
        <defaultLiveTemplates file="/Translations.xml"/>
        <liveTemplateContext
                contextId="Translations"
                implementation="org.intellij.sdk.language.nanomessage.NanoMessageClickTemplateContextType"
        />
        <psi.referenceContributor
                language="NanoMessage"
                implementation="org.intellij.sdk.language.nanomessage.NanoMessageReferenceContributor"
        />
        <codeInsight.parameterNameHints
                language="NanoMessage"
                implementationClass="org.intellij.sdk.language.nanomessage.NanoMessageChoiceInlayHintProvider"
        />
        <lang.quoteHandler
                language="NanoMessage"
                implementationClass="org.intellij.sdk.language.nanomessage.NanoMessageQuoteHandler"
        />
        <typedHandler
                implementation="org.intellij.sdk.language.nanomessage.editor.NanoMessageTypedHandler"
        />
        <backspaceHandlerDelegate
                implementation="org.intellij.sdk.language.nanomessage.editor.NanoMessageBackspaceHandler"
        />
        <codeBlockSupportHandler
            language="NanoMessage"
            implementationClass="org.intellij.sdk.language.nanomessage.NanoMessageCodeBlockSupportHandler"
        />
        <lang.foldingBuilder
            language="NanoMessage"
            implementationClass="org.intellij.sdk.language.nanomessage.NanoMessageFolding"
        />
        <multiHostInjector
            implementation="org.intellij.sdk.language.nanomessage.LegacyInjector"
        />


        <fileType
                name="Ampersand Styling"
                implementationClass="org.intellij.sdk.language.legacy.AmpersandFileType"
                fieldName="INSTANCE"
                language="MinecraftAmpersand"
                extensions="lang"
        />
        <lang.parserDefinition
                language="MinecraftAmpersand"
                implementationClass="org.intellij.sdk.language.legacy.AmpersandParserDefinition"
        />
        <annotator
                language="MinecraftAmpersand"
                implementationClass="org.intellij.sdk.language.legacy.AmpersandAnnotator"
        />
        <completion.contributor
                language="MinecraftAmpersand"
                implementationClass="org.intellij.sdk.language.legacy.AmpersandCompletionContributor"
        />
        <colorProvider
                language="MinecraftAmpersand"
                implementationClass="org.intellij.sdk.language.legacy.AmpersandElementColorProvider"
        />
    </extensions>
</idea-plugin>